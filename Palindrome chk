#include<bits/stdc++.h>
using namespace std;
int main()
{
  long long N,count=0;
  cin >> N;
  long long A[N];
  for(int i=0;i<N;i++)
  {
  cin >> A[i];
  }
  
  for(int i=0;i<N/2;i++)
  {
  if(A[i]==A[N-i-1])
  {
  	count++;
  	}
  }
  if(N%2!=0)
  {
  	if(count==(N%2)+1)
  {
  	cout <<"YES";
  	}
  else cout << "NO";
  	}
  else
  {
  	if(count==(N/2))
  cout <<" YES";
  else
  cout <<"NO";
  	}
  
  
    }