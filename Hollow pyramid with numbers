#include<stdio.h>
int main()
{
    int n,i,j;
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
    for(j=1;j<=n-i;j++)
    {
        printf(" ");
    }
    for(j=n-i+1;j<=n;j++)
    {
        if(j==n-i+1 )
        {
            printf("%d",j); }
            else
            {
                printf(" ");
            }
    }


     for(j=n-1;j>=n-i+1;j--)
    {
        if(j==(n-i+1) )
        {
        printf("%d",j);
        }
        else
        {
            printf(" ");
        }
    }
    printf("\n");
    }

}