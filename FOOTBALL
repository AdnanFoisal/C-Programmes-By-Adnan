#include<stdio.h>
#include<string.h>
int main()
{
    char c[150];
    int i,sum=0,count=0;
    scanf("%s",c);
    size_t l=strlen(c);
    for(int i=0;i<l;i++)
    {
        if(c[i]=='0')
        {
            
            if(i>0 && c[i]==c[i-1]) count++;
            else count=1;
            if(count>=7)
            {
                sum=1;
            }
        }
        else if(c[i]=='1')
        {
            
            if(i>0 && c[i]==c[i-1]) count++;
            else count=1;
            if(count>=7)
            {
                sum=1;
            }
        }
        

    }
    if(sum)
    printf("YES");
    else
    printf("NO");
    return 0;
}
